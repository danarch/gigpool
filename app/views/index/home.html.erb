<div class="jumbotron">
  <center><h1>Welcome to GIGPool</h1>
  <p>Follow the steps below to explore opportunities and apply</p>
  <p><%= link_to "Manage Work", manage_work_path, class: "btn btn-info"%></p></center>
</div>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Step 1: Click All That Apply
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
        <div class="row">
			 	<ul class="container-fluid">
			    	<% @skill.each do |skill| %>
			    		<div class="col-md-3">
			    			<%= check_box_tag(:skill)%>
			    			<%= skill.name %>
			    		</div>
			    	<% end %>
			    </ul><br />
		</div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingTwo">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Step 2: Choose your desired employers
        </a>
      </h4>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
      <div class="panel-body">
        Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. 3 wolf moon officia aute, 
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Step 3: Application / Create Profile
        </a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
		<%= form_for(@profile) do |f| %>
		  <% if @profile.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

		      <ul>
		      <% @profile.errors.full_messages.each do |message| %>
		        <li><%= message %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		<div class="row">
		  <div class="col-sm-3">
		    <h3>Personal</h3>
		      <div class="field">
		        <%= f.label :first_name %><br>
		        <%= f.text_field :first_name %>
		      </div>
		      <div class="field">
		        <%= f.label :last_name %><br>
		        <%= f.text_field :last_name %>
		      </div>
		      <div class="field">
		        <%= f.label :age %><br>
		        <%= f.number_field :age %>
		      </div>
		      <div class="field">
		        <%= f.label :address_l1 %><br>
		        <%= f.text_field :address_l1 %>
		      </div>
		      <div class="field">
		        <%= f.label :address_l2 %><br>
		        <%= f.text_field :address_l2 %>
		      </div>
		      <div class="field">
		        <%= f.label :city %><br>
		        <%= f.text_field :city %>
		      </div>
		      <div class="field">
		        <%= f.label :state %><br>
		        <%= f.text_field :state %>
		      </div>
		      <div class="field">
		        <%= f.label :zipcode %><br>
		        <%= f.number_field :zipcode %>
		      </div>
		  </div>


		  <div class="col-sm-3">
		    <h3>Communication</h3>
		      <div class="field">
		        <%= f.label :phone_number %><br>
		        <%= f.number_field :phone_number %>
		      </div>
		      <div class="field">
		        <%= f.label :phone_model %><br>
		        <%= f.text_field :phone_model %>
		      </div>
		  </div>

		  <div class="col-sm-3">
		    <h3>Education</h3>
		      <div class="field">
		        <%= f.label :education_level %><br>
		        <%= f.text_field :education_level %>
		      </div>
		      <div class="field">
		        <%= f.label :school %><br>
		        <%= f.text_field :school %>
		      </div>
		      <div class="field">
		        <%= f.label :grad_year %><br>
		        <%= f.date_select :grad_year %>
		      </div>
		      <div class="field">
		        <%= f.label :major %><br>
		        <%= f.text_field :major %>
		      </div>
		    <h3>Physical</h3>
		      <div class="field">
		        <%= f.label :lift_weight %><br>
		        <%= f.number_field :lift_weight %>
		      </div>
		      <div class="field">
		        <%= f.label :tote_number %><br>
		        <%= f.number_field :tote_number %>
		      </div>
		      <div class="field">
		        <%= f.label :tote_reason %><br>
		        <%= f.text_area :tote_reason %>
		      </div>
		      <div class="field">
		        <%= f.label :discovery %><br>
		        <%= f.text_field :discovery %>
		      </div>
		  </div>

		  <div class="col-sm-3">
		    <h3>Transportation</h3>
		      <div class="field">
		        <div class="field">
		        <%= f.label :car %><br>
		        <%= f.check_box :car %>
		      </div>
		      <div class="field">
		        <%= f.label :insurance %><br>
		        <%= f.check_box :insurance %>
		      </div>
		        <%= f.label :driver_license %><br>
		        <%= f.number_field :driver_license %>
		      </div>
		      <div class="field">
		        <%= f.label :car_make %><br>
		        <%= f.text_field :car_make %>
		      </div>
		      <div class="field">
		        <%= f.label :car_model %><br>
		        <%= f.text_field :car_model %>
		      </div>
		      <div class="field">
		        <%= f.label :car_year %><br>
		        <%= f.date_select :car_year %>
		      </div>
		      <div class="field">
		        <%= f.label :bike %><br>
		        <%= f.check_box :bike %>
		      </div>
		      <div class="field">
		        <%= f.label :moped %><br>
		        <%= f.check_box :moped %>
		      </div>
		      <div class="field">
		        <%= f.label :motorcycle %><br>
		        <%= f.check_box :motorcycle %>
		      </div><br/>
		      <div class="actions">
		        <%= f.submit %>
		      </div>
		  </div>
		<% end %> 
      </div>
    </div>
  </div>
</div>